@using Microsoft.AspNetCore.Identity
@using SteadyLogistic.Data.Models;
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.IsMember())
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Member" asp-controller="Member" asp-action="UpgradeToPremium">Upgrade To Premium</a>
            </li>
        }
        if (User.IsAdmin())
        {
            <li class="nav-item dropdown">
                <a class="nav-link text-white dropdown-toggle" href="#" id="navbarDropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                    Admin Panel
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown1">
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="AddNews">Add News</a>
                    <a class="dropdown-item" asp-area="Admin" asp-controller="Admin" asp-action="Messages">Messages
                        <span class="badge badge-light">5</span></a>
                </div>
            </li>
        }
        if (User.IsManager())
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-area="Manager" asp-controller="Member" asp-action="UpgradeToPremium">Manager Panel</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-warning" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-warning">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>