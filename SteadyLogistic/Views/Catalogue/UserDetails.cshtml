@model UserDetailsServiceModel

@{ ViewBag.Title = "User Details"; }

<head>
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/messages.css" />
</head>

<div class="row">
    <div class="col-md-12">
        <table class="table table-sm table-striped col-md-12">
            <thead class="bg-primary text-warning freights-head">
                <tr>
                    <th class="col-md-2"> </th>
                    <th class="col-md-10"> User information: </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="col-md-2 freights-bold-right">
                        Name:
                    </td>
                    <td class="col-md-10">
                        @Model.FullName
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2 freights-bold-right">
                        Phone Number:
                    </td>
                    <td class="col-md-10">
                        @Model.PhoneNumber
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2 freights-bold-right">
                        Email:
                    </td>
                    <td class="col-md-10">
                        <a href="mailto:@{@Model.Email}">@Model.Email</a>
                    </td>
                </tr>
                <tr>
                    <td class="col-md-2 freights-bold-right">
                        Registered on:
                    </td>
                    <td class="col-md-10">
                        @Model.RegisteredOn.ToLocalTime().ToString("dd MMMM, yyyy")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-12">
        <partial name="_CompanyDetailsPartial" model="@Model.Company" />
    </div>
</div>